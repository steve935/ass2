<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.steve.a390assa.ProfileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="49dp"
        android:id="@+id/name_editText"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ " />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:id="@+id/saveButton" />

    <TextView
        android:text="Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/name_editText"
        android:layout_alignBottom="@+id/name_editText"
        android:layout_toStartOf="@+id/name_editText"
        android:layout_marginEnd="20dp"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:text="Student ID :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_editText"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_marginTop="72dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:hint="enter ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="6"
        android:layout_below="@+id/name_editText"
        android:layout_marginTop="58dp"
        android:id="@+id/id_editText"
        android:layout_alignEnd="@+id/name_editText"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="  Age :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_editText"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="75dp"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:hint="enter age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="3"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/name_editText"
        android:id="@+id/age_editText"
        android:layout_alignEnd="@+id/saveButton" />
</RelativeLayout>
